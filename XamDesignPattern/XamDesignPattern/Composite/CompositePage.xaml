<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:xamdesignpattern="clr-namespace:XamDesignPattern"
             x:Class="XamDesignPattern.CompositePage">
    <ContentPage.BindingContext>
        <xamdesignpattern:CompositeViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Collection}"/>
    </ContentPage.Content>
</ContentPage>